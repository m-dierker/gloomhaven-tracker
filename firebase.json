{
  "hosting": [
    {
      "target": "gloomhaven-tracker",
      "public": "dist/gloomhaven-tracker",
      "ignore": ["**/.*"],
      "headers": [
        {
          "source": "*.[0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f].+(css|js)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public,max-age=31536000,immutable"
            }
          ]
        },
        {
          "source": "/@(ngsw-worker.js|ngsw.json)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "no-cache"
            }
          ]
        }
      ],
      "rewrites": [
        // Exclude requests for static assets that should be handled by Firebase Hosting.
        // Including these caches a permanent redirect that's annoying to get rid of.
        {
          "source": "!/@(js|css|png|jpg|jpeg|gif|webp|ico|svg|eot|ttf|woff|woff2|json)/**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}

{
  "hosting": [
    {
      "target": "gloomhaven-tracker",
      "public": "dist/gloomhaven-tracker",
      "ignore": ["**/.*"],
      "headers": [
        {
          "source": "*.[0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f].+(css|js)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public,max-age=31536000,immutable"
            }
          ]
        },
        {
          "source": "/@(ngsw-worker.js|ngsw.json)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "no-cache"
            }
          ]
        }
      ],
      "rewrites": [
        // Exclude assets that might be cached as a bad redirect.
        // Inlcuding permanent redirects for these is a pain to clear from the browser cache.
        {
          "source": "**/*.@(js|css|png|jpg|jpeg|webp|gif|svg|woff|woff2|ttf|eot)",
          "destination": "404.html"
        },
        // All other URLs go to the homepage.
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}
